@model IEnumerable<Negocio.Models.Producto>

@{
    ViewBag.Title = "";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Producto", "Create")
</p>
<table class="table">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
           Imagen
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaActualizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Negocio.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioVenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destacado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Imagen)" width="80" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaActualizacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Negocio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destacado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.ProductoId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoId })
            </td>
        </tr>
    }

</table>
