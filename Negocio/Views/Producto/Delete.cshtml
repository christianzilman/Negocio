@model Negocio.Models.Producto

@{
    ViewBag.Title = "Eliminar";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Eliminación de Producto - ¿Está seguro de que desea eliminar esto?</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            <img src="~/Images/e.png" width="80" height="80" />
            <div>    Descripcion: @Html.DisplayFor(model => model.Nombre) </div>
            <div>    Precio: @Html.DisplayFor(model => model.PrecioVenta)</div>
            <div>    Negocio: @Html.DisplayFor(model => model.Negocio.Nombre)</div>
            <div>    Stock: @Html.DisplayFor(model => model.Cantidad)</div>
            <br />
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <input type="submit" class="btn-primary" value="Eliminar" />
                    </div>
                    <div>
                        @Html.ActionLink("Volver al listado", "Index")
                    </div>

                }

            </div>
        </div>
    </div>
</div>
