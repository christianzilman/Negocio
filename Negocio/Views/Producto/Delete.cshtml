@model Negocio.Models.Producto

@{
    ViewBag.Title = "Eliminar";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">¿Está seguro de que desea eliminar este producto?</h2>
    </div>
    <div class="panel-body">
        <div class="col-md-3">
            @*<img src="data:image;base64,@System.Convert.ToBase64String(model.Imagen)" width="80" height="80" />*@
            <img src="~/Images/e.png" width="80" height="80" />
            <div style="font-weight: bold">  Descripción: </div>
            <div>@Html.DisplayFor(model => model.Nombre)</div>
            <br />
            <div style="font-weight: bold">    Precio: </div>
            <div>$ @Html.DisplayFor(model => model.PrecioVenta)</div>
            <br />
            <div style="font-weight: bold">    Negocio: </div>
            <div>@Html.DisplayFor(model => model.Negocio.Nombre)</div>
            <br />
            <div style="font-weight: bold">    Stock: </div>
            <div>@Html.DisplayFor(model => model.Cantidad)</div>
            <br />
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <input type="submit" class="btn-primary" value="Eliminar" />
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("Volver", "Index")
                    </div>

                }

            </div>
        </div>
    </div>
</div>
