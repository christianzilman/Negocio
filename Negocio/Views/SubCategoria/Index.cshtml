@model IEnumerable<Negocio.Models.SubCategoria>

@{
    ViewBag.Title = "Index";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Sub-Categoria</h2>
    </div>
    <div class="panel-body">
        <p>
            @Html.ActionLink("Cargar Nueva Sub-Categoria", "Create")
        </p>
        <table class="table">
            <tr class="info">
                <th>
                    Sub-Categoria
                </th>
                <th>
                    Categoria
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.SubCategoriaId }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.SubCategoriaId }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.SubCategoriaId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>