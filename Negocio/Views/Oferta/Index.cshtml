@model IEnumerable<Negocio.Models.Oferta>

@{
    ViewBag.Title = "Index";
}

<h2>Ofertas</h2>

<p>
    @Html.ActionLink("Crear Nueva Oferta", "Create")
</p>
<table class="table">
   <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
       <th colspan="2">
           Vigencia
       </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
       <th></th>
    </tr>
    <tr class="info">
       <th></th>
       <th>
           Desde
       </th>
       <th>
           Hasta
       </th>
       <th></th>
       <th></th>
    </tr>
   

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.FechaDesde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OfertaId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OfertaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OfertaId })
            </td>
        </tr>
    }

</table>
