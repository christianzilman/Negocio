@model Negocio.Models.Item

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">¿Esta usted seguro que desea eliminar este Item?</h2>
    </div>
    <div class="panel-body">

        <fieldset>
            
            <div class="display-field">
                @Html.DisplayFor(model => model.Nombre)
            </div>
            <br />
            <div style="font-weight: bold">
                Perteneciente a la Sub-Categoria:
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.SubCategoria.Nombre)
            </div>
        </fieldset>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" class="btn-primary" value="Eliminar" /> 
            </p>
            <p>
                @Html.ActionLink("Volver", "Index")
            </p>
        }
    </div>

</div>